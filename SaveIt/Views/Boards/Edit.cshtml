@model SaveIt.Models.Board

@{
    ViewBag.Title = "Editare Board";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(controllerName: "Boards", actionName: "Edit", method: FormMethod.Post, routeValues: new { id = Model.Id }))
{
    @Html.Label("Name", "Nume board")
    <br />

    @Html.Editor("Name")
    <br /> <br />

    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
    <br /> <br />

    <button class="btn btn-success" type="submit">Modifica Board-ul</button>
}