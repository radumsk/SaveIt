<div class="card text-light text-center mb-3" style="width: 48%; margin-left: 10px;">
    <a href="/Pins/Show/@Model.Id" class="pintitle hover-white"><h3 class="card-title py-3 px-3 ">@Model.Title</h3></a>

    <div class="d-flex flex-column align-items-center">
       
        <div class="d-flex justify-content-start flex-row mt-4">
            @foreach (var pintag in Model.PinTags)
            {
                <div class="text-warning" style="margin-right: 5px">
                    <i class="bi bi-tag"></i>
                    @pintag.Tag.TagName
                </div>
            }

            <span class="text-success" style="margin-left: 30px">@Model.Likes.Count<i class="bi bi-hand-thumbs-up-fill"></i></span>
        </div>

        <div class="d-flex justify-content-between flex-row">

            @if (Model.User != null)
            {
                
                <div class="text-info" style="margin-right: 15px">
                    <i class="bi bi-person"></i>
                    <a href="/Users/Show/@Model.UserId">@Model.User.UserName</a>
                </div>
            }

            <span class="text-muted"> @Model.Date</span>
        </div>
        @if (Model.mediaType == "image")
        {
            <img src="~/images/@Model.mediaPath" alt="bufnita" style="width: 70%">

        }
        else
        {
            <iframe width="420" height="315" src="@Model.mediaPath"> </iframe>
        }
        <div class="card-text">@Model.Content</div>
        
    </div>
</div>
