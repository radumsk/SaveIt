<div class="card-body">
    <h3 class="card-title alert-success py-3 px-3 rounded-2">@Model.Title</h3>

    <div class="card-text">@Model.Content</div>

    <div class="d-flex justify-content-between flex-row mt-5">
        @if (Model.mediaPath != null)
        {
            <img src="~/images/@Model.mediaPath" alt="bufnita">
        }
        
        @foreach (var pintag in Model.PinTags)
        {
            <div>
                <i class="bi bi-tag"></i>
                @pintag.Tag.TagName
            </div>
        }

        @if (Model.User != null)
        {
            <div>
                <i class="bi bi-person"></i>
                @Model.User.UserName
            </div>
        }

        <span> @Model.Date</span>
        <p>Nr like-uri: @Model.Likes.Count</p>
    </div>
</div>