
@{
}

<h2 class="text-center">Afisare Pin-uri</h2> <br />

@if (ViewBag.Message != null)
{
    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

<div class="d-flex justify-content-center">
    <a class="btn btn-outline-success" href="/Tags/Index/">Afisare Tag-uri</a>
    <br />
    <a class="btn btn-outline-success" href="/Pins/New">Adauga Pin</a>
    <br />
</div>
<br />



@foreach (var pin in ViewBag.Pins)
{
    <div class="card-body">

        <h3 class="card-title alert-success py-3 px-3 rounded-2">@pin.Title</h3>

        <div class="card-text">@pin.Content</div>

        <div class="d-flex justify-content-between flex-row mt-5">

            <a class="btn btn-success" href="/Pins/Show/@pin.Id">Afisare Pin</a>

            @*
            <div>
                <i class="bi bi-globe"></i>
                @pin.Tag.TagName
            </div>
            *@
            @foreach (var pintag in pin.PinTags)
            {
                <div>
                    <i class="bi bi-globe"></i>
                    @pintag.Tag.TagName
                </div>
            }


            <span class="alert-success">@pin.Date</span>

        </div>

    </div>
    <br /> <br />
}
